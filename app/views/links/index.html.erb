<div class="container">
<% if current_user %>
  Create a new link:
    <%= render partial: 'form' %>
    <h1>Links</h1>
    <% @links.each do |link| %>
      <%= link_to link.title, link.url %>
      Read: <%= link.read.to_s %>
      <% if link.read == false %>
        <%= link_to "Mark as read", "", class: "read-button", id: "#{link.id}"  %>
      <% else %>
        Marked as read
      <% end %>
      <hr>
    <% end %>
<% end %>
</div>
