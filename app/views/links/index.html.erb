<div class="container">
<% if current_user %>
<div id="flash" class="alert-alert-success"></div>
  Create a new link:
  <form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link">
  </form>

  <h1>Links</h1>
  <div id="links-list">
   <% @links.each do |link| %>
   <div class='link' data-id='<%= link.id %>' id="link-<%= link.id %>">
             <p class='link-title'> <%= link.title %> </p>
             <p class='link-url'> <%= link.url %> </p>

             <p class="link_read">
               <%= link.read %>
             </p>
             <p class="link_buttons">
              <% if link.read == false %>
                <button class="mark-read">Mark as Read</button>
              <% else %>
                <button class="mark-unread">Mark as Unread</button>
              <% end %>
               <button class='edit-link'>Edit</button>
               <button class='delete-link'>Delete</button>
             </p>
           </div>
     <p><% if link.id %><%= link_to "Edit", edit_link_path(link) %><% end %></p>
     <hr>
     <% end %>
   </div>
 </div>
<% end %>
</div>
